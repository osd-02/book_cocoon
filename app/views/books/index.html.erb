<div class="text-3xl"> hello book cocoon </div>
<% @books.each do |book| %>
  <div class="w-[300px] my-4">
    <div class="grid grid-cols-2 gap-2">
      <div class="col-span-2 text-center bg-slate-300">
        <a href="/books/<%= book.id %>" class="text-orange-500">
          <%= book.title %>
        </a>
      </div>
      <div class="bg-slate-100">著者</div>
      <div class="bg-slate-100"><%= book.author %></div>
      <div class="bg-slate-100">読了</div>
      <div class="bg-slate-100"><%= book.completed ? "◎" : "×" %></div>
      <div></div>
      <div class="text-center bg-slate-300">
        <%= link_to '編集', "/books/#{book.id}/edit" %> | 
        <%= link_to '削除', "/books/#{book.id}", method: :delete %>
      </div>
    </div>
  </div>
<% end %>
<p class="text-amber-500"><%= link_to "新しく本を登録する", new_book_path %></p>
