<div class="grid grid-cols-6 gap-4 w-[600px] leading-[42px]">
  <div class="col-span-1 bg-slate-300">著作名</div>
  <div class="col-span-5 bg-slate-100"><%= @book.title %></div>
  <div class="col-span-1 bg-slate-300">著者</div>
  <div class="col-span-2 bg-slate-100"><%= @book.author %></div>
  <div class="col-span-1 bg-slate-300">読了</div>
  <div class="col-span-2 bg-slate-100"><%= @book.completed ? "◎" : "×" %></div>
  <div class="col-span-3"></div>
  <div class="col-span-3 bg-slate-300 text-center">
    <%= link_to '編集', "/books/#{@book.id}/edit" %> | <%= link_to '削除', "/books/#{@book.id}", method: :delete %>
  </div>

</div>



